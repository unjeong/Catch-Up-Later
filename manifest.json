{
  "manifest_version": 3,
  "name": "Catch Up Later",
  "version": "2.0.0",
  "description": "Monitor websites for new posts. Get notified without constantly checking.",
  "permissions": [
    "storage",
    "alarms",
    "activeTab",
    "scripting",
    "notifications",
    "offscreen",
    "identity"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "oauth2": { 
    "client_id": "567892047332-qnm4cqgb78l36e6ftbi0ts7rj4r9dkpv.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/gmail.modify",
      "https://www.googleapis.com/auth/gmail.readonly",
      "https://www.googleapis.com/auth/youtube.readonly",
      "https://www.googleapis.com/auth/drive.metadata.readonly"
    ]
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

